@model RecipeApp.Models.Recipe

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<hr />
<div class="col-md-6" id='ingredientTable'>
    <h4>
        Ingredients&nbsp;
        <span>
            <a href="@Url.Action( "List", "Ingredients", new { recipeId = Model.Id })">
                <i class="glyphicon glyphicon-pencil"></i>
            </a>
        </span>
    </h4>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Ingredients</h3>
        </div>
        <div class="panel-body">
            @Html.Partial("~/Views/Ingredients/_IngredientListDisplay.cshtml", Model.Ingredients)
        </div>
    </div>
</div>
<div class="col-md-6" id='stepsTable'>
    <h4>
        Preparation steps&nbsp;
        <span>
            <a href="@Url.Action( "List", "PreparationSteps", new { recipeId = Model.Id })">
                <i class="glyphicon glyphicon-pencil"></i>
            </a>
        </span>
    </h4>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Steps to prepare</h3>
        </div>
        <div class="panel-body">
            @Html.Partial("~/Views/PreparationSteps/_PreparationStepListDisplay.cshtml", Model.Steps)
        </div>
    </div>
</div>
<hr />


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
